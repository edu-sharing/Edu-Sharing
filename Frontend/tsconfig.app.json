{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jquery"],
    "paths": {
      "ngx-edu-sharing-api": [
        "dist/edu-sharing-api/edu-sharing-api",
        "dist/edu-sharing-api"
      ],
      "ngx-edu-sharing-ui": [
        "projects/edu-sharing-ui/src/lib"
      ],
      "ngx-edu-sharing-ui/*": [
        "projects/edu-sharing-ui/src/lib/*"
      ],
      // add a symlink to the render frontend inside the projects folder!
      "ngx-rendering-service": [
        "projects/rendering-service-lib/dist",
        "projects/rendering-service-lib"
      ],
      "ngx-rendering-service-api": [
        "projects/rendering-service-api/dist",
        "projects/rendering-service-api"
      ]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
